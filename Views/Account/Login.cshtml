@model OneJevelsCompany.Web.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Standalone page without layout
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - One Jewellery Company</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
         style="background: linear-gradient(135deg, #f5f5dc 0%, #faf8f3 100%);">

        <div class="max-w-md w-full space-y-8">
            <!-- Logo/Header -->
            <div class="text-center">
                <h1 class="text-4xl font-bold text-amber-700 mb-2">One Jewellery Company</h1>
                <h2 class="text-2xl font-semibold text-gray-700">Welcome Back</h2>
                <p class="mt-2 text-gray-600">Sign in to access your account</p>
            </div>

            <!-- Login Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8">

                @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                {
                    <div class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg">
                        <p>@ViewData["ErrorMessage"]</p>
                    </div>
                }

                <form asp-route-returnurl="@returnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg"></div>

                    <div class="space-y-4">
                        <!-- Email -->
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                            <input asp-for="Email"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                                   placeholder="you@example.com"
                                   autocomplete="username" />
                            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Password -->
                        <div>
                            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <input asp-for="Password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                                   placeholder="••••••••"
                                   autocomplete="current-password" />
                            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Remember Me -->
                        <div class="flex items-center">
                            <input asp-for="RememberMe"
                                   type="checkbox"
                                   class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded" />
                            <label asp-for="RememberMe" class="ml-2 block text-sm text-gray-700">
                                Remember me
                            </label>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit"
                                class="w-full bg-amber-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 transition">
                            Sign In
                        </button>
                    </div>
                </form>     
            </div>

            <!-- Back to Home -->
            <div class="text-center">
                <a href="/" class="text-gray-600 hover:text-amber-700 transition">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>