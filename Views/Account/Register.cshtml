@model OneJevelsCompany.Web.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = null; // Standalone page without layout
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - One Jewellery Company</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
         style="background: linear-gradient(135deg, #f5f5dc 0%, #faf8f3 100%);">

        <div class="max-w-md w-full space-y-8">
            <!-- Logo/Header -->
            <div class="text-center">
                <h1 class="text-4xl font-bold text-amber-700 mb-2">One Jewellery Company</h1>
                <h2 class="text-2xl font-semibold text-gray-700">Create Your Account</h2>
                <p class="mt-2 text-gray-600">Join us to design your perfect jewelry</p>
            </div>

            <!-- Register Card -->
            <div class="bg-white rounded-2xl shadow-xl p-8">

                <form asp-route-returnUrl="@returnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="mb-4 bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg text-sm"></div>

                    <div class="space-y-4">
                        <!-- Email -->
                        <div>
                            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                            <input asp-for="Email"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                                   placeholder="you@example.com"
                                   autocomplete="username" />
                            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Password -->
                        <div>
                            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                            <input asp-for="Password"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                                   placeholder="••••••••"
                                   autocomplete="new-password" />
                            <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
                            <p class="mt-1 text-xs text-gray-500">Minimum 6 characters</p>
                        </div>

                        <!-- Confirm Password -->
                        <div>
                            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
                            <input asp-for="ConfirmPassword"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition"
                                   placeholder="••••••••"
                                   autocomplete="new-password" />
                            <span asp-validation-for="ConfirmPassword" class="text-red-600 text-sm"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit"
                                class="w-full bg-amber-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-amber-700 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 transition">
                            Create Account
                        </button>
                    </div>
                </form>

                <!-- Benefits -->
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <p class="text-xs text-gray-600 mb-3">By creating an account, you can:</p>
                    <ul class="space-y-2 text-sm text-gray-700">
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span>Design custom jewelry pieces</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span>Save your designs and order history</span>
                        </li>
                        <li class="flex items-start">
                            <svg class="w-5 h-5 text-amber-600 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                            <span>Track your orders and manage preferences</span>
                        </li>
                    </ul>
                </div>

                <!-- Links -->
                <div class="mt-6 text-center text-sm">
                    <a asp-action="Login" asp-route-returnurl="@returnUrl"
                       class="text-amber-600 hover:text-amber-700 font-medium">
                        Already have an account? Sign in here
                    </a>
                </div>
            </div>

            <!-- Back to Home -->
            <div class="text-center">
                <a href="/" class="text-gray-600 hover:text-amber-700 transition">
                    ← Back to Home
                </a>
            </div>
        </div>
    </div>

    <!-- Validation Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>