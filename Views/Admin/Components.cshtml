@model IEnumerable<OneJevelsCompany.Web.Models.Component>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Components";
}
@if (TempData["ok"] != null)
{
    <div class="mb-3 p-3 rounded bg-green-50 text-green-700">@TempData["ok"]</div>
}

<div class="mb-4">
    <a class="px-3 py-2 rounded bg-amber-600 text-white hover:bg-amber-500" asp-controller="Admin" asp-action="ReceiveViaInvoice">
        Receive via Invoice
    </a>
    <a class="ml-2 px-3 py-2 rounded border" asp-controller="Components" asp-action="New">New Item</a>
</div>

<div class="bg-white rounded-2xl shadow overflow-hidden">
    <table class="min-w-full text-left">
        <thead class="bg-gray-50">
            <tr>
                <th class="p-3">Type</th>
                <th class="p-3">Name</th>
                <th class="p-3">Price</th>
                <th class="p-3">Stock</th>
                <th class="p-3"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr class="border-t">
                    <td class="p-3">@c.Category?.Name</td>
                    <td class="p-3">@c.Name</td>
                    <td class="p-3">@c.Price.ToString("C")</td>
                    <td class="p-3">@c.QuantityOnHand</td>
                    <td class="p-3">
                        <a class="text-amber-700 hover:underline"
                           asp-controller="Components" asp-action="Edit" asp-route-id="@c.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
