@model OneJevelsCompany.Web.Controllers.ComponentsController.AdminComponentEditVm
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Edit Component";
}
<form asp-action="Edit" method="post" enctype="multipart/form-data" class="max-w-xl bg-white p-5 rounded-2xl shadow space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <div>
        <label class="block mb-1">Name</label>
        <input asp-for="Name" class="w-full border rounded p-2" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block mb-1">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block mb-1">Quantity on hand</label>
            <input asp-for="QuantityOnHand" type="number" class="w-full border rounded p-2" />
        </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block mb-1">SKU</label>
            <input asp-for="Sku" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block mb-1">Color</label>
            <input asp-for="Color" class="w-full border rounded p-2" />
        </div>
    </div>
    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block mb-1">Size label</label>
            <input asp-for="SizeLabel" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block mb-1">Dimensions</label>
            <input asp-for="Dimensions" class="w-full border rounded p-2" />
        </div>
    </div>

    <div>
        <label class="block mb-1">Image</label>
        @if (!string.IsNullOrWhiteSpace(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" class="w-28 h-28 object-cover rounded mb-2" alt="current image" />
        }
        <input type="file" name="image" accept="image/*" class="block" />
    </div>

    <div>
        <label class="block mb-1">Description</label>
        <textarea asp-for="Description" rows="4" class="w-full border rounded p-2"></textarea>
    </div>

    <div class="flex gap-3">
        <button class="px-4 py-2 bg-amber-600 text-white rounded hover:bg-amber-500">Save</button>
        <a asp-controller="Admin" asp-action="Components" class="px-4 py-2 border rounded">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
