@model OneJevelsCompany.Web.Models.Admin.JewelEditViewModel
@using OneJevelsCompany.Web.Models
@{
    ViewData["Title"] = "Edit Jewel";
}

<h1 class="text-xl font-semibold mb-4">Edit Jewel</h1>

<form asp-action="EditJewel" method="post" enctype="multipart/form-data"
      class="max-w-xl bg-white p-5 rounded shadow space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div>
        <label class="block mb-1">Name</label>
        <input asp-for="Name" class="w-full border rounded p-2" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>

    <div>
        <label class="block mb-1">Category</label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<JewelCategory>()" class="w-full border rounded p-2"></select>
    </div>

    <div class="grid grid-cols-2 gap-4">
        <div>
            <label class="block mb-1">Base price</label>
            <input asp-for="BasePrice" type="number" step="0.01" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block mb-1">Quantity on hand</label>
            <input asp-for="QuantityOnHand" type="number" class="w-full border rounded p-2" />
        </div>
    </div>

    <div>
        <label class="block mb-1">Image</label>
        @if (!string.IsNullOrWhiteSpace(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" class="w-28 h-28 object-cover rounded mb-2" alt="current image" />
        }
        <input type="file" name="ImageFile" accept="image/*" class="block" />
        <div class="text-xs text-gray-500 mt-1">Leave empty to keep the current image.</div>
    </div>

    <div class="flex gap-3">
        <button class="px-4 py-2 bg-amber-600 text-white rounded hover:bg-amber-500">Save</button>
        <a asp-action="Jewels" class="px-4 py-2 border rounded">Cancel</a>
    </div>
</form>
