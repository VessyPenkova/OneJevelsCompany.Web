@{
    Layout = "_AdminLayout";               // keep the sidebar visible
    ViewData["Title"] = "Admin";
}

<div class="max-w-3xl">
    <h2 class="text-2xl font-bold text-amber-700 mb-3">Admin</h2>
    <div class="bg-white rounded-2xl shadow p-5 space-y-4">
        <p class="text-gray-700">
            Welcome to the admin area. Use the sidebar to navigate, or open the Dashboard:
        </p>
        <div>
            <a class="inline-block px-4 py-2 rounded bg-amber-600 text-white hover:bg-amber-500"
               asp-controller="Admin" asp-action="Dashboard">
                Go to Dashboard
            </a>
        </div>

        <hr class="my-3" />

        <div class="grid sm:grid-cols-2 gap-2 text-sm">
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="NewInvoice">New Invoice</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="Invoices">Invoices</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="Components">Components</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="Jewels">Jewels</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               href="/Admin/ComponentCategories">Categories</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               href="/Admin/NewCategory">New Category</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               href="/Admin/NewComponent">New Item</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="DesignOrders">Design Orders</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="ReadyDesignOrders">Ready Design Orders</a>
            <a class="block px-3 py-2 rounded bg-amber-50 hover:bg-amber-100 text-amber-900"
               asp-controller="Admin" asp-action="PurchaseQueue">Purchase Queue</a>
        </div>
    </div>
</div>
