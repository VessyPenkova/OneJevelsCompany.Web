@model IEnumerable<OneJevelsCompany.Web.Models.Invoice>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Invoices";
}
@if (TempData["Ok"] is string ok1)
{
    <div class="mb-4 p-3 bg-green-50 border border-green-300 rounded">@ok1</div>
}
@if (TempData["ok"] is string ok2)
{
    <div class="mb-4 p-3 bg-green-50 border border-green-300 rounded">@ok2</div>
}

<div class="mb-4">
    <a asp-controller="Admin" asp-action="NewInvoice" class="px-4 py-2 rounded bg-amber-600 text-white hover:bg-amber-500">New Invoice</a>
</div>

<div class="bg-white rounded-2xl shadow overflow-hidden">
    <table class="w-full text-left">
        <thead class="bg-gray-50">
            <tr>
                <th class="p-3">Number</th>
                <th class="p-3">Supplier</th>
                <th class="p-3">Issued</th>
                <th class="p-3">Lines</th>
                <th class="p-3">Total Cost</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr class="border-t">
                    <td class="p-3">@inv.Number</td>
                    <td class="p-3">@inv.SupplierName</td>
                    <td class="p-3">@inv.IssuedOnUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="p-3">@inv.Lines.Count</td>
                    <td class="p-3">@inv.TotalCost.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
