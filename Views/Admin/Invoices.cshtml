@model IEnumerable<OneJevelsCompany.Web.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
}
<h2 class="text-2xl font-bold text-amber-600 mb-6">Invoices</h2>

@if (TempData["Ok"] is string ok)
{
    <div class="mb-4 p-3 bg-green-100 border border-green-300 rounded">@ok</div>
}

<div class="mb-4">
    <a href="/Admin/NewInvoice" class="px-4 py-2 rounded bg-amber-600 text-white">New Invoice</a>
</div>

<table class="w-full table-auto bg-white rounded shadow">
    <thead class="bg-amber-100">
        <tr>
            <th class="p-2 text-left">Number</th>
            <th class="p-2 text-left">Supplier</th>
            <th class="p-2 text-left">Issued</th>
            <th class="p-2 text-left">Lines</th>
            <th class="p-2 text-left">Total Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inv in Model)
        {
            <tr class="border-t">
                <td class="p-2">@inv.Number</td>
                <td class="p-2">@inv.SupplierName</td>
                <td class="p-2">@inv.IssuedOnUtc.ToString("yyyy-MM-dd HH:mm")</td>
                <td class="p-2">@inv.Lines.Count</td>
                <td class="p-2">@inv.TotalCost.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
