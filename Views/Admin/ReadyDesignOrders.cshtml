@model IEnumerable<OneJevelsCompany.Web.Models.DesignOrder>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ready Design Orders";
}
<div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-bold text-amber-700">Ready Design Orders</h2>
    <a asp-controller="Admin" asp-action="DesignOrders" class="px-3 py-2 rounded border">Pending Design Orders</a>
</div>

<div class="bg-white rounded-2xl overflow-hidden shadow">
    <table class="min-w-full text-left">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-2">#</th>
                <th class="px-4 py-2">Preview</th>
                <th class="px-4 py-2">Created</th>
                <th class="px-4 py-2">Customer</th>
                <th class="px-4 py-2">Cat.</th>
                <th class="px-4 py-2">Qty</th>
                <th class="px-4 py-2">Len / mm</th>
                <th class="px-4 py-2">Cycle / Cap</th>
                <th class="px-4 py-2">Status</th>
                <th class="px-4 py-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr class="border-t">
                    <td class="px-4 py-2">#@o.Id</td>
                    <td class="px-4 py-2">
                        @if (!string.IsNullOrWhiteSpace(o.PreviewDataUrl))
                        {
                            <img src="@o.PreviewDataUrl" alt="preview #@o.Id" style="width:56px;height:32px;border-radius:8px;border:1px solid #e5e7eb;object-fit:cover" />
                        }
                        else
                        {

                            <span>—</span>
                        }
                    </td>
                    <td class="px-4 py-2">@o.CreatedUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                    <td class="px-4 py-2">
                        @o.CustomerName
                        @if (!string.IsNullOrWhiteSpace(o.CustomerEmail))
                        {
                            <div class="text-xs text-gray-500">@o.CustomerEmail</div>
                        }
                    </td>
                    <td class="px-4 py-2">@o.Category</td>
                    <td class="px-4 py-2">@o.Quantity</td>
                    <td class="px-4 py-2">@o.LengthCm.ToString("0.00") cm / @o.BeadMm mm</td>
                    <td class="px-4 py-2">@o.OneCycleBeads / @o.CapacityEstimate</td>
                    <td class="px-4 py-2">@o.Status</td>
                    <td class="px-4 py-2">
                        <a class="px-3 py-1 rounded bg-amber-600 text-white hover:bg-amber-500"
                           asp-controller="Admin" asp-action="DesignOrder" asp-route-id="@o.Id">Open</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="mt-4 text-sm text-gray-600">
        No ready design orders yet.
        <a class="text-amber-700 underline" asp-controller="Admin" asp-action="DesignOrders">See pending</a>.
    </div>
}
