@model List<OneJevelsCompany.Web.Models.CartItem>
@{
    ViewData["Title"] = "Your Cart";
}

<h2 class="text-2xl font-bold text-amber-600 mb-6 text-center">Shopping Cart</h2>

@if (!Model.Any())
{
    <p class="text-center text-gray-600">Your cart is empty.</p>
}
else
{
    <table class="table-auto w-full bg-white shadow rounded-lg">
        <thead class="bg-amber-100">
            <tr>
                <th class="p-2 text-left">Item</th>
                <th class="p-2 text-left">Qty</th>
                <th class="p-2 text-left">Price</th>
                <th class="p-2 text-left">Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-t">
                    <td class="p-2">@item.Title</td>
                    <td class="p-2">@item.Quantity</td>
                    <td class="p-2">@item.UnitPrice.ToString("C")</td>
                    <td class="p-2">@item.LineTotal.ToString("C")</td>
                    <td class="p-2">
                        <form method="post" action="/Cart/Remove">
                            <input type="hidden" name="sku" value="@item.Sku" />
                            <button class="text-red-500 hover:underline">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right mt-6">
        <a href="/Checkout" class="bg-amber-600 text-white px-6 py-3 rounded hover:bg-amber-500 transition">
            Proceed to Checkout
        </a>
    </div>
}
