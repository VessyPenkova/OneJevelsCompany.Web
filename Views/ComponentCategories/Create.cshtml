@model OneJevelsCompany.Web.Controllers.ComponentCategoriesController.CategoryEditVm
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "New Component Category";
}
<form asp-controller="ComponentCategories" asp-action="Create" method="post" class="max-w-md bg-white p-6 rounded-2xl shadow space-y-4">
    @Html.AntiForgeryToken()
    <h2 class="text-xl font-semibold">New Component Category</h2>
    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

    <div>
        <label class="block text-sm font-medium mb-1">Name</label>
        <input asp-for="Name" class="w-full border rounded p-2" />
        <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
    </div>
    <div>
        <label class="block text-sm font-medium mb-1">Sort order</label>
        <input asp-for="SortOrder" type="number" class="w-full border rounded p-2" />
    </div>

    <div class="flex gap-3">
        <button type="submit" class="px-6 py-3 rounded-lg bg-amber-600 text-white hover:bg-amber-500">Create</button>
        <a asp-controller="ComponentCategories" asp-action="Index" class="px-6 py-3 rounded-lg border">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
