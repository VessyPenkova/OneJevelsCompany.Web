@model IEnumerable<OneJevelsCompany.Web.Models.Design>
@{
    ViewData["Title"] = "Our Designs";
}

<h2 class="text-2xl font-bold text-amber-600 mb-6 text-center">Our Best Designs</h2>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var d in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h3 class="text-xl font-semibold mb-2">@d.Name</h3>
            <p class="text-sm text-gray-600 mb-3">Category: @d.Category</p>
            <p class="text-gray-700">@d.Description</p>
        </div>
    }
</div>
