@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-16">
    <h1 class="text-4xl font-extrabold text-amber-600 mb-4">Welcome to One Jewellery Company</h1>
    <p class="text-gray-600 text-lg mb-8">
        Discover handcrafted jewelry or design your own — elegance that tells your story.
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/Collections"
           class="bg-amber-600 text-white px-6 py-3 rounded-lg hover:bg-amber-500 transition">
            Explore Collections
        </a>

        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <a href="/Build"
               class="bg-white text-amber-700 border border-amber-300 px-6 py-3 rounded-lg hover:bg-amber-50 transition">
                Build your own
            </a>
        }
        else
        {
            <a href="/Account/Login?returnUrl=/Build"
               class="bg-white text-amber-700 border border-amber-300 px-6 py-3 rounded-lg hover:bg-amber-50 transition">
                Build your own
            </a>
            <p class="text-sm text-gray-500 mt-2 sm:mt-0 sm:self-center">
                (Login / Register required)
            </p>
        }
    </div>
</div>
