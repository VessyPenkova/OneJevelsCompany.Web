@model OneJevelsCompany.Web.Controllers.ComponentsController.AdminComponentEditVm
@{
    ViewData["Title"] = "Edit Component";
}

<form asp-controller="Components"
      asp-action="Edit"
      asp-route-id="@Model.Id"
      method="post"
      enctype="multipart/form-data"
      class="max-w-3xl mx-auto bg-white p-6 rounded-2xl shadow space-y-6">
    @Html.AntiForgeryToken()

    <h2 class="text-xl font-semibold">Edit: @Model.Name</h2>

    <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm font-medium mb-1">Name</label>
            <input asp-for="Name" class="w-full border rounded p-2" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">SKU</label>
            <input asp-for="Sku" class="w-full border rounded p-2" />
            <span asp-validation-for="Sku" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Price</label>
            <input asp-for="Price" type="number" step="0.01" class="w-full border rounded p-2" />
            <span asp-validation-for="Price" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Stock</label>
            <input asp-for="QuantityOnHand" type="number" class="w-full border rounded p-2" />
            <span asp-validation-for="QuantityOnHand" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Color</label>
            <input asp-for="Color" class="w-full border rounded p-2" />
            <span asp-validation-for="Color" class="text-red-600 text-sm"></span>
        </div>

        <div>
            <label class="block text-sm font-medium mb-1">Size label</label>
            <input asp-for="SizeLabel" class="w-full border rounded p-2" />
            <span asp-validation-for="SizeLabel" class="text-red-600 text-sm"></span>
        </div>

        <div class="md:col-span-2">
            <label class="block text-sm font-medium mb-1">Dimensions (semicolon separated)</label>
            <input asp-for="Dimensions" class="w-full border rounded p-2" placeholder="4x4;5x5;6x6" />
            <span asp-validation-for="Dimensions" class="text-red-600 text-sm"></span>
        </div>
    </div>

    <div>
        <label class="block text-sm font-medium mb-1">Current image</label>
        @if (!string.IsNullOrWhiteSpace(Model.CurrentImageUrl))
        {
            <img src="@Model.CurrentImageUrl" alt="@Model.Name"
                 style="width:120px;height:120px;object-fit:cover;border-radius:10px;" />
        }
        else
        {
            <div class="text-sm text-gray-500">No image uploaded yet.</div>
        }
    </div>

    <div>
        <label class="block text-sm font-medium mb-1">Upload new image</label>
        <input type="file" name="image" accept="image/*" class="block w-full border rounded p-2" />
        <p class="text-xs text-gray-500 mt-1">JPEG/PNG recommended.</p>
    </div>

    <div>
        <label class="block text-sm font-medium mb-1">Description</label>
        <textarea asp-for="Description" rows="6" class="w-full border rounded p-2"></textarea>
        <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
    </div>

    <div class="flex gap-3">
        <button type="submit" class="px-6 py-3 rounded-lg bg-amber-600 text-white hover:bg-amber-500">
            Save
        </button>
        <a href="/Admin/Components" class="px-6 py-3 rounded-lg border">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
