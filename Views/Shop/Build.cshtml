@model IEnumerable<OneJevelsCompany.Web.Models.Component>
@using OneJevelsCompany.Web.Models
@{
    ViewData["Title"] = "Build Your Own Jewelry";
    var category = (JewelCategory)ViewBag.Category;
}

<!-- Hero with your background image -->
<div class="relative max-w-5xl mx-auto mb-6 rounded-2xl overflow-hidden">
    <img src="~/Images/MainBackground.png" asp-append-version="true"
         alt="Background" class="absolute inset-0 w-full h-full object-cover" />
    <div class="absolute inset-0 bg-white/55 backdrop-blur-[1px]"></div>

    <div class="relative p-5 flex items-center justify-between">
        <div>
            <div class="text-sm text-gray-600">Build your own</div>
            <h1 class="text-2xl font-bold text-amber-700">@category.ToString()</h1>
            <p class="text-gray-700 mt-1">Pick parts, set per-piece quantities, add labor, and we'll craft it.</p>
        </div>

        <!-- Type tiles -->
        <div class="flex gap-3">
            <a href="/Shop/Build?category=Necklace"
               class="group w-36 p-3 rounded-xl border bg-white/80 hover:border-amber-400 transition @(category == JewelCategory.Necklace ? "ring-2 ring-amber-300" : "")">
                <div class="aspect-[4/3] rounded-lg overflow-hidden bg-amber-50 flex items-center justify-center">
                    <img src="~/Images/MainBackground.png" asp-append-version="true"
                         alt="Necklace" class="w-full h-full object-cover opacity-70" />
                </div>
                <div class="mt-2 text-center font-medium">Necklace</div>
            </a>

            <a href="/Shop/Build?category=Bracelet"
               class="group w-36 p-3 rounded-xl border bg-white/80 hover:border-amber-400 transition @(category == JewelCategory.Bracelet ? "ring-2 ring-amber-300" : "")">
                <div class="aspect-[4/3] rounded-lg overflow-hidden bg-amber-50 flex items-center justify-center">
                    <img src="~/Images/MainBackground.png" asp-append-version="true"
                         alt="Bracelet" class="w-full h-full object-cover opacity-70" />
                </div>
                <div class="mt-2 text-center font-medium">Bracelet</div>
            </a>
        </div>
    </div>
</div>

<!-- Quick link to Design Studio -->
<div class="max-w-5xl mx-auto -mt-2 mb-4 flex justify-end">
    <a asp-controller="Shop" asp-action="Design"
       class="px-4 py-2 rounded bg-amber-600 text-white hover:bg-amber-500">
        Design Studio (sequence preview)
    </a>
</div>

<!-- Error/Success Messages -->
@if (TempData["Err"] != null)
{
    <div class="max-w-5xl mx-auto mb-4">
        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg flex items-start gap-3" role="alert">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <div class="flex-1">
                <strong class="font-medium">Validation Error</strong>
                <p class="mt-1">@TempData["Err"]</p>
            </div>
        </div>
    </div>
}

@if (TempData["ok"] != null)
{
    <div class="max-w-5xl mx-auto mb-4">
        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg flex items-start gap-3" role="alert">
            <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <div class="flex-1">@TempData["ok"]</div>
        </div>
    </div>
}

<form asp-controller="Cart" asp-action="AddCustomRecipe" method="post"
      class="max-w-5xl mx-auto bg-white p-6 rounded-2xl shadow space-y-6">
    @Html.AntiForgeryToken()
    <input type="hidden" name="Category" value="@((int)category)" />

    <!-- Validation message placeholder (hidden by default) -->
    <div id="validationAlert" class="hidden bg-amber-50 border border-amber-200 text-amber-800 px-4 py-3 rounded-lg flex items-start gap-3" role="alert">
        <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
        </svg>
        <div class="flex-1">
            <strong class="font-medium">Please select components</strong>
            <p class="mt-1" id="validationMessage">Enter a quantity for at least one in-stock component to continue.</p>
        </div>
        <button type="button" onclick="this.parentElement.classList.add('hidden')" class="text-amber-600 hover:text-amber-800">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
        </button>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            <label class="block text-sm font-medium mb-1">Design name</label>
            <input name="DesignName" maxlength="80" class="w-full border rounded p-2"
                   placeholder="Customer's design name" />
        </div>
        <div>
            <label class="block text-sm font-medium mb-1">Labor per piece</label>
            <input name="LaborPerPiece" type="number" step="0.01" min="0" value="10.00"
                   class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block text-sm font-medium mb-1">Finished quantity</label>
            <input name="Quantity" type="number" min="1" value="1" class="w-full border rounded p-2" />
        </div>
        <div>
            <label class="block text-sm font-medium mb-1">Unit price (est.)</label>
            <input id="unitPrice" type="text" readonly class="w-full border rounded p-2 bg-gray-50" value="$0.00" />
        </div>
    </div>

    <p class="text-gray-600">Set quantities for each component <b>per finished @category.ToString().ToLower()</b>. Leave 0 to exclude.</p>

    @foreach (var group in Model
        .GroupBy(c => new { Name = c.Category?.Name ?? "Other", Order = c.Category?.SortOrder ?? 999 })
        .OrderBy(g => g.Key.Order))
    {
        <h3 class="text-lg font-semibold mt-6 mb-2 text-amber-700">@group.Key.Name</h3>

        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var c in group.OrderBy(x => x.Name))
            {
                var outOfStock = c.QuantityOnHand <= 0;
                <div class="group relative border rounded-xl overflow-hidden bg-white hover:shadow-md transition @(outOfStock ? "opacity-60" : "")">
                    <div class="flex gap-3 p-3">
                        <div class="shrink-0">
                            @if (!string.IsNullOrWhiteSpace(c.ImageUrl))
                            {
                                <img src="@c.ImageUrl" alt="@c.Name"
                                     class="w-16 h-16 rounded-lg object-cover ring-1 ring-gray-200" />
                            }
                            else
                            {
                                <img src="~/Images/MainBackground.png" asp-append-version="true"
                                     alt="placeholder" class="w-16 h-16 rounded-lg object-cover ring-1 ring-gray-200 opacity-70" />
                            }
                        </div>

                        <div class="flex-1 min-w-0">
                            <div class="font-medium truncate" title="@c.Name">@c.Name</div>
                            <div class="text-xs text-gray-600">
                                @if (!string.IsNullOrEmpty(c.Color))
                                {
                                    <text>@c.Color · </text>
                                }
                                @if (!string.IsNullOrEmpty(c.SizeLabel))
                                {
                                    <text>@c.SizeLabel · </text>
                                }
                                @if (!string.IsNullOrEmpty(c.Dimensions))
                                {
                                    <text>@c.Dimensions · </text>
                                }
                                Price: @c.Price.ToString("C") · Stock: @c.QuantityOnHand
                            </div>

                            <div class="mt-2">
                                <label class="block text-xs text-gray-600">Qty per piece</label>
                                <div class="flex items-center gap-2">
                                    <button type="button" class="px-2 py-1 border rounded text-gray-700 hover:bg-gray-50 step-btn" data-dir="-1" data-for="qty-@c.Id">−</button>
                                    <input id="qty-@c.Id" type="number" min="0" value="0"
                                           name="Components[@c.Id].Quantity"
                                           data-price="@c.Price"
                                           class="w-20 border rounded p-2 qty-input text-center"
                                           @(outOfStock ? "disabled" : "") />
                                    <button type="button" class="px-2 py-1 border rounded text-gray-700 hover:bg-gray-50 step-btn" data-dir="1" data-for="qty-@c.Id">+</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- per-component actions -->
                    <div class="px-3 pb-3 flex gap-2">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@c.Id"
                           class="flex-1 text-center px-4 py-2 rounded-lg border hover:bg-gray-50 text-sm">
                            Разгледай
                        </a>

                        @if (!outOfStock)
                        {
                            <a asp-controller="Shop" asp-action="Configure" asp-route-id="@c.Id"
                               class="flex-1 text-center px-4 py-2 rounded-lg bg-amber-600 text-white hover:bg-amber-500 text-sm">
                                Поръчай
                            </a>
                        }
                        else
                        {
                            <button type="button" disabled
                                    class="flex-1 text-center px-4 py-2 rounded-lg bg-gray-200 text-gray-500 cursor-not-allowed text-sm">
                                Поръчай
                            </button>
                        }
                    </div>

                    @if (outOfStock)
                    {
                        <div class="absolute inset-0 bg-white/60 grid place-content-center text-red-600 font-semibold">
                            Out of stock
                        </div>
                    }
                </div>
            }
        </div>
    }

    <!-- selected preview -->
    <div class="mt-6">
        <div class="text-sm font-semibold text-gray-700 mb-2">Selected components (per piece)</div>
        <div id="preview" class="flex flex-wrap gap-2 min-h-[2rem]"></div>
    </div>

    <div class="flex gap-3 pt-2">
        <button type="submit" class="bg-amber-600 text-white px-6 py-3 rounded-lg hover:bg-amber-500 transition font-medium">
            Add to Cart
        </button>
        <a asp-controller="Shop" asp-action="Collections" class="px-6 py-3 rounded-lg border hover:bg-gray-50 font-medium">Cancel</a>
    </div>
</form>

@section Scripts {
    <script>
        // Recalculate unit price and update preview
        function recalcUnitPrice() {
            let materials = 0;
            const chips = [];

            document.querySelectorAll('.qty-input').forEach(inp => {
                if (inp.disabled) return;
                const q = parseInt(inp.value || '0', 10);
                const p = parseFloat(inp.dataset.price || '0');

                if (!isNaN(q) && !isNaN(p) && q > 0) {
                    materials += q * p;
                    const name = inp.closest('.group').querySelector('.font-medium').textContent.trim();
                    chips.push(`${q}× ${name}`);
                }
            });

            const labor = parseFloat(document.querySelector('input[name=LaborPerPiece]').value || '0');
            const unit = materials + (isNaN(labor) ? 0 : labor);

            document.getElementById('unitPrice').value =
                unit.toLocaleString(undefined, { style: 'currency', currency: 'USD' });

            // Update preview chips
            const prev = document.getElementById('preview');
            prev.innerHTML = '';

            if (chips.length === 0) {
                prev.innerHTML = '<span class="text-xs text-gray-500 italic">No components selected yet. Select quantities above to see your design.</span>';
            } else {
                chips.forEach(t => {
                    const span = document.createElement('span');
                    span.className = 'inline-flex items-center px-3 py-1.5 rounded-full bg-amber-50 text-amber-800 ring-1 ring-amber-200 text-sm font-medium';
                    span.textContent = t;
                    prev.appendChild(span);
                });
            }

            // Hide validation alert when user selects components
            if (chips.length > 0) {
                document.getElementById('validationAlert').classList.add('hidden');
            }
        }

        // Handle increment/decrement buttons
        document.addEventListener('click', (e) => {
            const b = e.target.closest('.step-btn');
            if (!b) return;

            const id = b.dataset.for;
            const dir = parseInt(b.dataset.dir, 10);
            const inp = document.getElementById(id);

            if (!inp || inp.disabled) return;

            const cur = parseInt(inp.value || '0', 10);
            const next = Math.max(0, cur + dir);
            inp.value = next;

            recalcUnitPrice();
        });

        // Handle manual input changes
        document.addEventListener('input', (e) => {
            if (e.target.classList.contains('qty-input') || e.target.name === 'LaborPerPiece') {
                recalcUnitPrice();
            }
        });

        // Form submission validation
        document.querySelector('form').addEventListener('submit', function (e) {
            const hasComponents = Array.from(document.querySelectorAll('.qty-input'))
                .some(inp => !inp.disabled && parseInt(inp.value || '0', 10) > 0);

            if (!hasComponents) {
                e.preventDefault();

                // Show inline alert instead of browser alert
                const alert = document.getElementById('validationAlert');
                alert.classList.remove('hidden');

                // Scroll to alert smoothly
                alert.scrollIntoView({ behavior: 'smooth', block: 'center' });

                // Optional: Add shake animation
                alert.classList.add('animate-shake');
                setTimeout(() => alert.classList.remove('animate-shake'), 500);
            }
        });

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', recalcUnitPrice);
    </script>

    <style>
        /* Optional: Add shake animation for validation alert */
        @@keyframes shake {
            0%, 100% {
                transform: translateX(0);
            }

            25% {
                transform: translateX(-10px);
            }

            75% {
                transform: translateX(10px);
            }
        }

        .animate-shake {
            animation: shake 0.3s ease-in-out;
        }
    </style>
}