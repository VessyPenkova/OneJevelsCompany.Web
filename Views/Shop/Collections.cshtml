@model IEnumerable<OneJevelsCompany.Web.Models.Jewel>
@{
    ViewData["Title"] = "Collections";
}

<div class="flex justify-center gap-4 mb-6">
    <a href="/Shop/Collections?category=Necklace" class="px-4 py-2 rounded border hover:bg-amber-50">Necklaces</a>
    <a href="/Shop/Collections?category=Bracelet" class="px-4 py-2 rounded border hover:bg-amber-50">Bracelets</a>
</div>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            @if (!string.IsNullOrWhiteSpace(item.ImageUrl))
            {
                <img src="@item.ImageUrl" class="w-full h-40 object-cover rounded mb-3" alt="@item.Name" />
            }
            <h3 class="text-xl font-semibold mb-1">@item.Name</h3>
            <p class="text-sm text-gray-600">Category: @item.Category</p>
            <p class="text-sm text-gray-600 mb-2">In stock: @item.QuantityOnHand</p>
            <p class="text-amber-600 font-bold mb-4">Price: @item.TotalPrice().ToString("C")</p>
            <form method="post" action="/Shop/AddReady/@item.Id">
                <button type="submit" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-500 transition" @(item.QuantityOnHand <= 0 ? "disabled" : "")>
                    @(item.QuantityOnHand <= 0 ? "Out of Stock" : "Add to Cart")
                </button>
            </form>
        </div>
    }
</div>
