@model IEnumerable<OneJevelsCompany.Web.Models.Jewel>
@{
    ViewData["Title"] = "Collections";
}

<h2 class="text-2xl font-bold text-amber-600 mb-6 text-center">Ready-Made Collections</h2>

<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var item in Model)
    {
        <div class="bg-white shadow-md rounded-lg p-4">
            <h3 class="text-xl font-semibold mb-2">@item.Name</h3>
            <p class="text-sm text-gray-600 mb-3">Category: @item.Category</p>
            <p class="text-amber-600 font-bold mb-4">Price: @item.TotalPrice().ToString("C")</p>
            <form method="post" action="/Shop/AddReady/@item.Id">
                <button type="submit" class="bg-amber-600 text-white px-4 py-2 rounded hover:bg-amber-500 transition">
                    Add to Cart
                </button>
            </form>
        </div>
    }
</div>
