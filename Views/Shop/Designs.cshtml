@model IEnumerable<object>
@{
    ViewData["Title"] = "Designs";

    // ---- helpers to read properties from any VM shape without tight coupling
    string? S(object o, string name)
    {
        if (o is null) return null;
        var p = o.GetType().GetProperty(name);
        if (p == null) return null;
        var v = p.GetValue(o);
        return v?.ToString();
    }
    int I(object o, string name, int fallback = 0)
    {
        var s = S(o, name);
        if (int.TryParse(s, out var n)) return n;
        return fallback;
    }

    // Figure out best values for an item
    (string title, string? thumb, string category, int popularity, string? href) Pick(object item)
    {
        var thumb = S(item, "ThumbUrl")
                 ?? S(item, "PreviewDataUrl")
                 ?? S(item, "ImageUrl")
                 ?? S(item, "DataUrl");

        var title = S(item, "Title")
                 ?? S(item, "Name")
                 ?? "Custom design";

        var category = S(item, "Category")
                    ?? S(item, "CategoryName")
                    ?? "Bracelet";

        var popularity = I(item, "Popularity", I(item, "Orders", 0));

        var href = S(item, "DetailsUrl"); // optional
        return (title!, thumb, category!, popularity, href);
    }
}

<div class="max-w-6xl mx-auto space-y-6">
    <div class="text-center">
        <h1 class="text-2xl font-bold text-amber-700">Our Best Designs</h1>
        <p class="text-gray-600">Ready-made designs and community submissions.</p>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="bg-white border rounded-2xl p-6 text-center text-gray-600">
            No designs yet. Create one in the <a asp-controller="Shop" asp-action="Design" class="text-amber-700 underline">Design Studio</a>.
        </div>
    }
    else
    {
        <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
            @foreach (var item in Model)
            {
                var d = Pick(item);
                <div class="bg-white rounded-2xl overflow-hidden shadow">
                    <div class="aspect-video bg-gray-100 flex items-center justify-center">
                        @if (!string.IsNullOrWhiteSpace(d.thumb))
                        {
                            <img src="@d.thumb" alt="@d.title" class="w-full h-full object-cover" />
                        }
                        else
                        {
                            <div class="text-gray-400 text-sm">No preview</div>
                        }
                    </div>
                    <div class="p-4">
                        <div class="flex items-start justify-between">
                            <h3 class="font-semibold pr-3">@d.title</h3>
                            <span class="text-xs px-2 py-1 rounded bg-amber-50 text-amber-700 border border-amber-100">@d.category</span>
                        </div>
                        <div class="mt-2 text-xs text-gray-600">
                            Popularity: <strong>@d.popularity</strong>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(d.href))
                        {
                            <div class="mt-3">
                                <a href="@d.href" class="text-sm text-amber-700 hover:underline">View details</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
